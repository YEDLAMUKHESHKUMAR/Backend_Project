<% layout("layouts/boilerplate") %>
    <h2>Add new list</h2>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            
            <form method="post" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
            <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input required name="listing[title]" type="text" placeholder="Add a title" class="form-control">
            <div class="valid-feedback">Title looks good</div>
            <div class="invalid-feedback">Invalid title</div>
        </div>

        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea required name="listing[description]" placeholder="description" class="form-control"></textarea>
            <div class="invalid-feedback">Add some description</div>
        </div>


        
        <div class="mb-3">

            <label for="image" class="form-label">Upload Image</label>
            <input name="listing[image]" type="file" class="form-control" required>
            
        </div>

        <div class="row">

            <div class="mb-3 col-md-4" >
                <!-- Here we are not giving input format as number .. because , if the input was given as string from hostinger...it will show error -->
                <label for="price" class="form-label">Price</label>
                <input required name="listing[price]"  placeholder="eg:1200" class="form-control">
                <div class="invalid-feedback">Please enter valid price</div>
            </div>

            <div class="mb-3 col-md-8">
                <label for="country" class="form-label">Country</label>
                <input required name="listing[country]" type="text" placeholder="eg:india" class="form-control">
                <div class="invalid-feedback">Please enter valid country</div>
            </div>

        </div>


        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input required name="listing[location]" type="text" placeholder="location" class="form-control">
            <div class="invalid-feedback">Please enter valid location</div>
        </div>

        <br>

        <button class="btn btn-dark add-btn mt-3">Add</button>

        <br>
        <br>
    </form>
    </div>
</div>

